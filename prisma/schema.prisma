generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  email    String @unique
  password String
  name     String

  createdAt DateTime @default(now())

  @@map("users")
  TaskUser TaskUser[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  startAt     DateTime
  endAt       DateTime
  priority    String
  status      String

  @@map("tasks")
  TaskUser TaskUser[]
}

model TaskUser {
  id String @id @default(uuid())
  task Task @relation(fields: [taskId], references: [id])
  user User @relation(fields: [userId], references: [id])
  
  taskId String
  userId String

  createtAd DateTime @default(now())

  @@map("tasks_users")
}
